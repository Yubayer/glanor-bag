  }
  @media screen and (max-width: 1866px){
    .our-promise-wrapper {
      padding: 15px 118px 15px 178px;
      gap: 90px;
      justify-content: flex-start;

    }
  } */
</style>
<section class="our-promise--{{ section.id }} ">
  <div class="swiper o-p-swiper">
  <div class="our-promise-wrapper swiper-wrapper">
    
    <div class="promise-box swiper-slide">
      <div class="promise-icon">
        {% render 'promise-icon', name: 'car' %}
      </div>
      <div class="promise-text">
        <p>Fast Shipping</p>
      </div>
    </div>

    <div class="promise-box swiper-slide">
      <div class="promise-icon">
        {% render 'promise-icon', name: 'scale' %}
      </div>
      <div class="promise-text">
        <p>Secure Payment</p>
      </div>
    </div>

    <div class="promise-box swiper-slide">
      <div class="promise-icon">
        {% render 'promise-icon', name: 'email' %}
      </div>
      <div class="promise-text">
        <p>Verified Seller</p>
      </div>
    </div>
    
  </div>
  </div>
</section>
