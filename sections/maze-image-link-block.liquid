<style>
  .image-link-wrapper {
      display: grid;
      grid-template-columns: repeat(3,1fr);
      justify-content: space-between;
      overflow: hidden;
      grid-column-gap: 15px;
  }

  .image-link-content{
      position: relative;
  }

  .image-link-content > :is(img) {
      width: 100%;
  }

  .image-link-btns {
      position: absolute;
      width: 100%;
      height: 100%;
      left: 0;
      top: 0;
      display: flex;
      justify-content: center;
      align-items: center;
  }

  .image-link-btns > :is(a) {
      text-decoration: none;
      color: white;
      font-size: 36px;
      position: relative;
      transition: .5s;
  }

  .image-link-btns a::after {
      position: absolute;
      content: "";
      width: 0%;
      height: 3px;
      background: black;
      bottom: 0;
      left: 50%;
      transition: all .5s ease-in-out;
  }
  
  .image-link-btns:hover a{
      transform: translateY(-15px);
  }
  
  .image-link-btns:hover a::after {
      position: absolute;
      content: "";
      width: 100%;
      height: 3px;
      background: black;
      bottom: 0;
      left: 0%;
      transition: all .5s ease-in-out;
  }
  @media screen and (max-width: 800px){
    .image-link-wrapper{
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="maze-image-block">
  <div class="image-link-wrapper">
    {% for block in section.blocks %}
      <div class="image-link-content">
        <img src="{{ block.settings.image | img_url: 'master' }}" alt="image-block">
        <div class="image-link-btns">
          <a href="{{ block.settings.btn_url }}">{{ block.settings.btn_text }}</a>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Maze Image Link Block",
    "settings": [],
    "blocks": [
      {
        "type": "image",
        "name": "Image Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Select Image"
          },
          {
            "type": "text",
            "id": "btn_text",
            "label": "Button Text"
          },
          {
            "type": "url",
            "id": "btn_url",
            "label": "Button Url"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Maze Image Link Block"
      }
    ]
  }
{% endschema %}
