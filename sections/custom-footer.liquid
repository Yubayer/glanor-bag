<section class="custom-footer footer">
  <div class="custom-footer-wrapper">
    <div class="custom-footer-top">
      <div class="custom-footer-top-wrapper">
        <div class="custom-footer-left">
          <div class="custom-footer-left-wrapper">
            <div class="custom-footer-menu">
              {% for block in section.blocks %}
                {% if block.type == "footer-menu" %}
                  <div class="custom-footer-menu-wrapper">
                    
                      <h6>{{ block.settings.footer-menu.title }} </h6>
                    
                    <div class="footer-menu-items">
                      {% for link in block.settings.footer-menu.links %}
                      	<a href="{{ link.url }}">{{ link.title }}</a>
                      {% endfor %}
                    </div>
                  </div>
                 {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
        <div class="custom-footer-right">
          <div class="custom-footer-right-wrapper">
            <div class="footer-connect">
              <div class="footer-connect-wrapper">
                <h6>CONNECT</h6>
                <p>Stay connected to the latest news&nbsp;&amp; deals:</p>
                <div class="news-letter">
                      {% form 'customer', class: 'newsletter-form' %}
                        <input type="hidden" name="contact[tags]" value="newsletter">
                        <div class="newsletter-form__field-wrapper-custom">
                          <div class="field-custom">
                            <input
                              id="NewsletterForm--{{ section.id }}"
                              type="email"
                              name="contact[email]"
                              class="field__input-custom"
                              value="{{ form.email }}"
                              aria-required="true"
                              autocorrect="off"
                              autocapitalize="off"
                              autocomplete="email"
                              {% if form.errors %}
                                autofocus
                                aria-invalid="true"
                                aria-describedby="Newsletter-error--{{ section.id }}"
                              {% elsif form.posted_successfully? %}
                                aria-describedby="Newsletter-success--{{ section.id }}"
                              {% endif %}
                              placeholder="{{ 'newsletter.label' | t }}"
                              required
                            >
                            {% comment %}
                            <label class="field__label-custom" for="NewsletterForm--{{ section.id }}">
                              {{ 'newsletter.label' | t }}
                            </label>
                          {% endcomment %}
                          <br>
                            <button type="submit" class="newsletter-form__button-custom field__button-custom" name="commit" id="Subscribe" aria-label="{{ 'newsletter.button_label' | t }}">
                              {% comment %}{% render 'icon-arrow' %}{% endcomment %}
                              SIGN UP
                            </button>
                          </div>
                          {%- if form.errors -%}
                            <small class="newsletter-form__message-custom form__message-custom" id="Newsletter-error--{{ section.id }}">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</small>
                          {%- endif -%}
                        </div>
                        {%- if form.posted_successfully? -%}
                          <h3 class="newsletter-form__message newsletter-form__message--success form__message" id="Newsletter-success--{{ section.id }}" tabindex="-1" autofocus>{% render 'icon-success' %}{{ 'newsletter.success' | t }}</h3>
                        {%- endif -%}
                      {% endform %}
                </div>
              </div>
            </div>
            {% comment %}
            <div class="footer-address">
              <div class="form-address-wrapper">
                
                  <h6>Directions & Hours</h6>
                
                <div class="form-address-inner">
                   <p>Come by and see us <br>Monday - Saturday from&nbsp;8a - 6p.</p><p></p><p><strong>3001 West I-20<br>Weatherford, TX 76087<br></strong><a href="tel:8889552955" title="tel:8889552955"><strong>888.955.2955</strong></a></p><p></p><p>Cafe Hours: <br>Tuesday - Saturday 7:30a - 3p.</p>
                </div>
              </div>
            </div>
            {% endcomment %}
          </div>
        </div>
      </div>
    </div>
    <div class="custom-footer-bottom">
      <div class="custom-footer-bottom-wrapper">
        <div class="custom-footer-bottom-left">
          <p class="credits">
          Â© 2022 <a href="/" title="">Teskeys</a>. <a href="https://outofthesandbox.com/" target="_blank" title="Turbo Shopify Theme by Out of the Sandbox">Designed by Out of the Sandbox</a>.</p>
        </div>
        <div class="custom-footer-bottom-left">
          <div class="payment-methods">
            {% render 'payment', name: 'amex' %}
            {% render 'payment', name: 'apple' %}
            {% render 'payment', name: 'club' %}
            {% render 'payment', name: 'discover' %}
            {% render 'payment', name: 'g-pay' %}
            {% render 'payment', name: 'master-card' %}
            {% render 'payment', name: 'paypal' %}
            {% render 'payment', name: 'shop-pay' %}
            {% render 'payment', name: 'venmo' %}
            {% render 'payment', name: 'visa' %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

